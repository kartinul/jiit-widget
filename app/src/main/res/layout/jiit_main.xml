<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.Jiit_widget.AppWidget.Container"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.Jiit_widget.AppWidgetContainer">


    <TextView
        android:id="@+id/time_of_meal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mess_menu"
        android:layout_marginBottom="2dp"
        android:layout_centerHorizontal="true"
        android:text="@string/time_of_meal"
        android:textSize="17sp"
        android:textColor="?android:textColorPrimary"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mess_menu"
        style="@style/Widget.Jiit_widget.AppWidget.InnerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="?android:textColorPrimaryInverse"
        android:layout_margin="8dp"
        android:text="@string/mess_menu"
        android:textSize="14sp" />

    <ImageButton
    android:id="@+id/refresh_menu"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:contentDescription="refresh menu"
    android:layout_alignParentBottom="true"
    android:layout_marginEnd="3dp"
    android:layout_marginBottom="3dp"
    android:src="@android:drawable/ic_menu_search"
    android:scaleType="centerInside"/>


</RelativeLayout>